<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Patient.Visit">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/blue"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="Observations and Next Visit"
            android:textColor="@color/white"
            android:textSize="18sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/buttons"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"
            android:fadeScrollbars="true"
            android:padding="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Any other Observations/ recommendations *"
                    android:fontFamily="@font/sora_regular"
                    android:textSize="@dimen/big"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/recco"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/primary_edit_text"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/small"
                    android:fontFamily="@font/sora_regular"
                    android:textColorHint="@color/gray"
                    android:inputType="textMultiLine"
                    android:gravity="start|top"
                    android:hint="Enter text here..."
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="18dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When is the next visit *"
                    android:fontFamily="@font/sora_regular"
                    android:textSize="@dimen/big"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/visit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:background="@drawable/primary_edit_text"
                        android:layout_marginEnd="10dp"
                        android:textSize="@dimen/small"
                        android:fontFamily="@font/sora_regular"
                        android:textColorHint="@color/gray"/>

                    <Button
                        android:id="@+id/select"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:layout_marginStart="10dp"
                        style="@style/Custom.OutlinedButton"
                        android:backgroundTint="@color/light_blue"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:textSize="@dimen/small"
                        android:fontFamily="@font/sora_regular"
                        android:textColorHint="@color/gray"
                        android:text="Select Date"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Does the patient want to get pop-up message reminders for their next visit? *"
                    android:fontFamily="@font/sora_regular"
                    android:textSize="@dimen/big"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"/>

                <RadioGroup
                    android:id="@+id/radioGroup_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Yes"
                        android:fontFamily="@font/sora_regular"
                        android:textSize="@dimen/small"
                        android:textColor="@color/black"
                        android:layout_marginBottom="-10dp"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No"
                        android:fontFamily="@font/sora_regular"
                        android:textSize="@dimen/small"
                        android:textColor="@color/black"/>

                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Does the patient want to get any other information about cancer?"
                    android:fontFamily="@font/sora_regular"
                    android:textSize="@dimen/big"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"/>

                <RadioGroup
                    android:id="@+id/radioGroup_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Yes"
                        android:fontFamily="@font/sora_regular"
                        android:textSize="@dimen/small"
                        android:textColor="@color/black"
                        android:layout_marginBottom="-10dp"/>

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="No"
                        android:fontFamily="@font/sora_regular"
                        android:textSize="@dimen/small"
                        android:textColor="@color/black"/>

                </RadioGroup>


            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:text="@string/back"
                android:fontFamily="@font/sora_regular"
                android:textSize="@dimen/bigger"
                android:textColor="@color/blue"
                style="@style/Custom.OutlinedButton"
                android:backgroundTint="@color/light_blue"/>

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:text="@string/next"
                android:fontFamily="@font/sora_regular"
                android:textSize="@dimen/bigger"
                android:textColor="@color/white"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>